<p style="color: green"><%= notice %></p>

<h1>Messages</h1>

<%= link_to "New message", new_message_path %>

<div id="messages">
  <% @messages.each do |message| %>
    <%= link_to message.attr['ENVELOPE'].subject, message_path(@selected_mailbox, Base64.strict_encode64(message.attr['ENVELOPE'].message_id)) %>
    <br>
  <% end %>
</div>

